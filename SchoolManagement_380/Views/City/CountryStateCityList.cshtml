@model SchoolManagement_380.Models.DbContext.City

@{
    ViewBag.Title = "CountryStateCityList";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="Container" style="margin-top:65px; margin-bottom : 50px">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Country Name</th>
                <th>State Name</th>
                <th>City Name</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in ViewBag.CSCity)
            {
                <tr>
                    <td>@item.CountryName</td>
                    <td>@item.StateName</td>
                    <td>@item.CityName</td>
                    <td>
                        <a class="btn btn-info" href="/City/GetDetailById/@item.Cityid">Details</a>
                        <a class="btn btn-primary" href="/City/AddCity/@item.Cityid">Edit</a>
                        <a class="btn btn-danger" href="/City/DeleteCity/@item.Cityid">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
